FROM sconecuratedimages/iexec:python-3.6.6-alpine3.6

RUN apk update

RUN apk add gcc musl-dev

RUN cp /usr/bin/python3.6 /usr/bin/python3

RUN pip install web3 flask flask_restful flask_sqlalchemy docker

COPY libscone-cli.so /usr/lib/libscone-cli.so

COPY scone_cli /usr/lib/python3.6/scone_cli

COPY launch.sh /launch.sh

COPY sms /sms

COPY palaemonConfTemplate.txt /palaemonConfTemplate.txt



RUN mkdir scone_volume_fspf
